# Holiday Gifting Dashboard Configuration
# Copy this file to .env and update with your values

# Database
# SQLite (development):
DATABASE_URL=sqlite:///data/holiday_gifts.db

# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/holiday_gifts

# Secret key for session encryption (generate a random string)
SECRET_KEY=your-secret-key-here-change-this

# Application Settings
APP_NAME=Holiday Gifting Dashboard
DEBUG=false

# Future: Supabase Configuration (optional, for future authentication)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# Future: Claude API (optional, for gift suggestions)
# CLAUDE_API_KEY=sk-your-api-key-here

# Streamlit Settings (overrides .streamlit/config.toml)
# STREAMLIT_SERVER_HEADLESS=true
# STREAMLIT_SERVER_PORT=8501
